<%= form_with(model: expense_report, local: true) do |form| %>
  <% if expense_report.errors.any? %>
    <div id="error_explanation" class="alert alert-danger">
      <ul>
        <% expense_report.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= form.label :title %>
    <%= form.text_field :title, class: "form-control", placeholder: "Fuel for site visit" %>
  </div>

  <div class="mb-3">
    <%= form.label :category %>
    <%= form.select :category,
          ['fuel', 'meal', 'materials', 'transport', 'parking', 'tools', 'other'],
          { prompt: "Select category" },
          class: "form-select" %>
  </div>

  <div class="mb-3">
    <%= form.label :amount, "Amount (â‚¬)" %>
    <%= form.number_field :amount, step: "0.01", class: "form-control", placeholder: "e.g. 45.50" %>
  </div>

  <div class="mb-3">
    <%= form.label :date %>
    <%= form.date_field :date, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :description %>
    <%= form.text_area :description, rows: 3, class: "form-control", placeholder: "Briefly describe the expense..." %>
  </div>

  <div class="mb-3">
    <%= form.label :receipt, "Upload receipt" %>
    <%= form.file_field :receipt, class: "form-control" %>
  </div>

  <div class="actions">
    <%= form.submit "Save Report", class: "btn btn-primary" %>
  </div>
<% end %>
