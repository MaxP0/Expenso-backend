# Render / production пример
RAILS_ENV=production
RAILS_LOG_LEVEL=info

# Обязательно (Render -> Environment)
RAILS_MASTER_KEY=
SECRET_KEY_BASE=
DATABASE_URL=postgres://USER:PASSWORD@HOST:5432/DBNAME

# Домены
APP_HOST=your-backend.onrender.com
FRONTEND_ORIGINS=https://your-frontend.vercel.app

# ActiveStorage (рекомендуется S3/Render Object Storage)
ACTIVE_STORAGE_SERVICE=s3
S3_ACCESS_KEY_ID=
S3_SECRET_ACCESS_KEY=
S3_BUCKET=
S3_REGION=us-east-1
# Для Render Object Storage / MinIO: https://<region>.render.com / https://<host>
S3_ENDPOINT=
S3_FORCE_PATH_STYLE=true

# Solid Queue (по умолчанию использует роль "queue" из database.yml; можно переопределить)
SOLID_QUEUE_DATABASE=queue
QUEUE_DATABASE_URL=
CACHE_DATABASE_URL=
CABLE_DATABASE_URL=
